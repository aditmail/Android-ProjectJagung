                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linear_pestisida3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="15dp"
                        android:text="Rp. "
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="28sp" />

                    <EditText
                        android:id="@+id/editText_inputHargaPestisida"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.09"
                        android:ems="10"
                        android:inputType="number|numberDecimal"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"

                    android:text="Titik Tanam"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_inputTitikTanam"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"

                    android:inputType="textMultiLine|textLongMessage"
                    android:lineSpacingExtra="14sp"
                    android:singleLine="false"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"

                    android:text="Keterangan"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText_inputKeterangan"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"

                    android:inputType="textMultiLine|textLongMessage"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/linear_periode"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="101dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0"
                        android:fontFamily="sans-serif"
                        android:text="Periode"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editText_inputPeriode"
                        android:layout_width="209dp"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="35dp"
                        android:layout_marginTop="15dp"
                        android:ems="10"
                        android:inputType="number|numberDecimal"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_totalNilai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView212"
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="Grand Total :"
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editText_TotalHarga"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="25dp"
                        android:layout_marginTop="15dp"
                        android:ems="10"
                        android:inputType="number|numberDecimal"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnSimpanPupukBenih"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    android:layout_marginRight="75dp"
                    android:layout_marginTop="10dp"
                    android:text="SIMPAN"
                    android:textSize="20sp"
                    android:visibility="visible" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
